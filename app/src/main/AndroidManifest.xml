<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.silviabova.mylogin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/nico_ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/nico_ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="SignUp"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ProfileActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UserActivity"
            android:label="My Profile" />
        <activity
            android:name=".HomeActivity"
            android:label="My Library" />
        <activity
            android:name=".AddBook"
            android:label="Add Book" />
        <activity android:name=".BookDetails" />
        <activity
            android:name=".Barcode_Scanner"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Barcode Scanner" />
        <activity android:name=".EmbeddedBook" />
        <activity android:name=".SearchActivity"
            android:label=" "></activity>
    </application>

</manifest>