<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="253dp"
        android:layout_height="250dp"
        android:background="@color/myBlu"
        android:padding="20px">

        <ImageView
            android:id="@+id/Tv_UserImage"
            android:layout_width="221dp"
            android:layout_height="180dp"
            android:layout_marginTop="20px"
            android:foregroundGravity="center"
            android:src="@drawable/user1" />

        <TextView
            android:id="@+id/name"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="210dp"
            android:text="Name: "
            android:textColor="#fff"
            android:textSize="@dimen/fab_margin"
            android:textStyle="italic" />

    </RelativeLayout>

    <TextView
        android:id="@+id/age"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="26dp"
        android:text="Birthday:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/fab_margin"
        android:textStyle="italic" />


    <TextView
        android:id="@+id/bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:text="Description:"
        android:textSize="@dimen/fab_margin"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="italic">

    </TextView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="51dp"
        android:layout_height="23dp"
        android:layout_alignTop="@+id/age"
        android:layout_toEndOf="@+id/relativeLayout"
        android:paddingLeft="20px"
        android:paddingRight="30px"
        android:src="@drawable/birth"
        android:tint="@color/CartaZucchero" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="57dp"
        android:layout_height="27dp"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="28dp"
        android:layout_toLeftOf="@+id/bio"
        android:layout_toStartOf="@+id/bio"
        android:paddingLeft="20px"
        android:paddingRight="30px"
        android:src="@drawable/bio"
        android:tint="@color/CartaZucchero" />

</RelativeLayout>